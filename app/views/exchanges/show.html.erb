<div>
  <div>
    <h1>
      Exchange #<%= @the_exchange.id %> details
    </h1>

    <div>
      <div>
        <a href="/exchanges">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_exchange/<%= @the_exchange.id %>">
          Delete exchange
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Status
      </dt>
      <dd>
        <%= @the_exchange.status %>
      </dd>

      <dt>
        Album
      </dt>
      <dd>
        <%= @the_exchange.album_id %>
      </dd>

      <dt>
        Id sender
      </dt>
      <dd>
        <%= @the_exchange.id_sender %>
      </dd>

      <dt>
        Card number to send
      </dt>
      <dd>
        <%= @the_exchange.card_number_to_send %>
      </dd>

      <dt>
        Id receiver
      </dt>
      <dd>
        <%= @the_exchange.id_receiver %>
      </dd>

      <dt>
        Card number to receive
      </dt>
      <dd>
        <%= @the_exchange.card_number_to_receive %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_exchange.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_exchange.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit exchange
    </h2>

    <form action="/modify_exchange/<%= @the_exchange.id %>"  method="post" >
      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_exchange.status %>">
      </div>

      <div>
        <label for="album_id_box">
          Album
        </label>

        <input type="text" id="album_id_box" name="query_album_id" value="<%= @the_exchange.album_id %>">
      </div>

      <div>
        <label for="id_sender_box">
          Id sender
        </label>

        <input type="text" id="id_sender_box" name="query_id_sender" value="<%= @the_exchange.id_sender %>">
      </div>

      <div>
        <label for="card_number_to_send_box">
          Card number to send
        </label>

        <input type="text" id="card_number_to_send_box" name="query_card_number_to_send" value="<%= @the_exchange.card_number_to_send %>">
      </div>

      <div>
        <label for="id_receiver_box">
          Id receiver
        </label>

        <input type="text" id="id_receiver_box" name="query_id_receiver" value="<%= @the_exchange.id_receiver %>">
      </div>

      <div>
        <label for="card_number_to_receive_box">
          Card number to receive
        </label>

        <input type="text" id="card_number_to_receive_box" name="query_card_number_to_receive" value="<%= @the_exchange.card_number_to_receive %>">
      </div>

      <button>
        Update exchange
      </button>
    </form>
  </div>
</div>

<hr>
