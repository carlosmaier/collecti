<div>
  <div>
    <h4>
      Find your album
    </h4>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Name
        </th>

        <th>
          Cards
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_albums.each do |an_album| %>
      <tr>
       
        <td>
          <%= an_album.name %>
        </td>

        <td>
          <%= an_album.cards %>
        </td>

        <td>
          
          <% if @list_of_collections.include?(an_album.id) %>
            
            <form action="/albums/<%= an_album.id %>">
              <button class="btn btn-primary btn-sm">Go to your album</button>
            </form>
            

          <% else %>
            <form action="/link_collection/<%= an_album.id %>">
              <button class="btn btn-secondary btn-sm">Add album</button>
            </form>
            
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<% if @current_user.id == 1 %>
  <div>
    <div>
      <h4>Add a new album (ADMIN)</h4>

      <form action="/insert_album" method="post">
        <div>
          <label for="name_box">
            Name
          </label>

          <input type="text" id="name_box" name="query_name">
        </div>

        <div>
          <label for="cards_box">
            Cards
          </label>

          <input type="text" id="cards_box" name="query_cards">
        </div>

        <button class="btn btn-primary btn-sm">
          Create album
        </button>
      </form>
    </div>
  </div>
  <hr>
<% else end %>
