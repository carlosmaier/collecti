<div>
  <div>
    <h1>
      Album #<%= @the_album.id %> details
    </h1>

    <div>
      <div>
        <a href="/albums">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_album/<%= @the_album.id %>">
          Delete album
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_album.name %>
      </dd>

      <dt>
        Cards
      </dt>
      <dd>
        <%= @the_album.cards %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit album
    </h2>

    <form action="/modify_album/<%= @the_album.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_album.name %>">
      </div>

      <div>
        <label for="cards_box">
          Cards
        </label>

        <input type="text" id="cards_box" name="query_cards" value="<%= @the_album.cards %>">
      </div>

      <button>
        Update album
      </button>
    </form>
  </div>
</div>

<hr>
