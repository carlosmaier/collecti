<!DOCTYPE html>
<html>
  <head>
    <title>Base Rails</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.css">

    <%= stylesheet_link_tag 'application', media: 'all' %>

  </head>

  <body>

    <nav>
      <ul>
          <% if session[:user_id] == nil %>
            <li>
              <a href="/user_sign_in">
                Sign in
              </a>
            </li>
          <% else %>
            <li>
              User: <%= @current_user.first_name %> | 
              <a href="/user_sign_out">
                Sign out
              </a>
            </li>
          <% end %>          
          <li>
            <a href="/">
              Home
            </a>
          </li>
          <li>
            <a href="/exchanges">
                Your exchanges
              </a>
          </li>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
